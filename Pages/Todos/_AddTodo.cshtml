@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Index

<form hx-post="@Url.Page("Index", "Earnings")"
      hx-swap="outerHTML"
      class="form-horizontal needs-validation"
      _="on htmx:beforeSend set #submitButton.disabled to 'disabled'">

    <!-- Text input-->
    <div class="mb-3">
        <label class="form-label" asp-for="@Model.Todo.content"></label>
        <input type="text" class="form-control" asp-for="@Model.Todo.content">
        <div class="invalid-feedback">
            <span asp-validation-for="@Model.Todo.content"></span>
        </div>
    </div>

    <!-- Text input-->
    @* <div class="mb-3"> *@
    @*     <label class="form-label" asp-for="Age"></label> *@
    @*     <input type="text" class="form-control" asp-for="Age"> *@
    @*     <div class="invalid-feedback"> *@
    @*         <span asp-validation-for="Age"></span> *@
    @*     </div> *@
    @* </div> *@

    <div class="control">
        <button id="submitButton" type="submit" class="btn btn-primary">
            <span class="htmx-indicator">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                <span class="visually-hidden">Loading...</span>
            </span>
            Submit
        </button>

        @Html.AntiForgeryToken()
    </div>

</form>