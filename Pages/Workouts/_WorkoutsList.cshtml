@model List<Workout>

@{
    var workouts = Model;
}


<div>
    <p class='text-sm font-bold text-accent'>workouts: @workouts.Count</p>

    <ul class="list-disc space-y-2">
        @foreach (var workout in workouts)
        {
            // if (workout.reps > 0 || workout.sets > 0)
            // {
            <li class="flex items-center justify-start">
                <span class="h-6 flex items-center sm:h-7">
                    <svg
                        class="flex-shrink-0 h-5 w-5 text-cyan-500"
                        viewBox="0 0 20 20"
                        fill="currentColor">
                        <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"/>
                    </svg>
                    <status-icon status="success"/>
                </span>
                <div data-tip="@workout.exercise" class="tooltip tooltip-accent tooltip-bottom">
                    <p class="ml-2">
                        @workout
                    </p>
                </div>
            </li>
            // }
        }

    </ul>

</div>